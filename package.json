{
	"name": "tinyrm",
	"version": "1.0.2",
	"type": "commonjs",
	"license": "MIT",
	"description": "A tiny CLI tool to recursively remove files and directories",
	"repository": "br0p0p/tinyrm",
	"packageManager": "pnpm@9.5.0",
	"bin": {
		"tinyrm": "./dist/bin.js"
	},
	"engines": {
		"node": ">=14.14"
	},
	"scripts": {
		"build": "esbuild src/bin.mjs --bundle --platform=node --target=node18 --outfile=dist/bin.js --analyze=verbose",
		"format": "prettier --write src *.md package.json",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [
		"del",
		"premove",
		"remove",
		"rimraf"
	],
	"author": {
		"name": "Caleb Williams"
	},
	"dependencies": {
		"fdir": "^6.1.1",
		"picomatch": "^4.0.2"
	},
	"devDependencies": {
		"esbuild": "^0.23.0",
		"prettier": "^3.3.2"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 2
	}
}
